#include <stdio.h>
#include <stdlib.h>

int main()
{
   //Leap year :
   int year;

   printf("Enter a year::");
    fflush(stdout);
   scanf("%d",&year);

   if(year % 400==0){
    printf("%d is a Leap year",year);
   }
   else if(year % 100==0){
    printf("%d is not Leap year",year);
   }
   else if(year % 4==0){
    printf("%d is a Leap year",year);
   }

   else{
    printf("%d is not Leap year",year);
   }


    return 0;

}
