#include <stdio.h>
#include <stdlib.h>

int main()
{
    int number;

    printf("inter a number:");
    scanf("%d",&number);

    if(number>0){
        printf("%d is positive",number);
    }
    else if(number<0){
        printf("%d is negative",number);
    }
    else{
        printf("%d is zero",number);
    }
    return 0;
}
